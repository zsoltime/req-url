{
  "env": {
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "sourceType": "script"
  },
  "rules": {
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore",
        "imports": "always-multiline",
        "objects": "always-multiline"
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": ["*.test.js"] }
    ]
  }
}
